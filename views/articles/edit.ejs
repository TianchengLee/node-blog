<%- include('../common/header.ejs') %>
<link rel="stylesheet" href="/node_modules/mditor/dist/css/mditor.min.css">
<script src="/node_modules/mditor/dist/js/mditor.min.js"></script>
<div class="container">
  <h1>编辑文章页</h1>
  <hr>
  <form id="form">
    <input type="hidden" name="id" value="<%= article.id %>">
    <div class="form-group">
      <label>文章标题：</label>
      <input type="text" name="title" class="form-control" required value="<%= article.title%>">
    </div>

    <div class="form-group">
      <label>文章内容：</label>
      <textarea name="content" class="form-control" id="editor"><%= article.content %></textarea>
    </div>

    <div class="form-group">
      <input type="submit" value="保存文章" class="btn btn-primary">
    </div>
  </form>
</div>
<script>
  $(function () {
    var mditor = Mditor.fromTextarea(document.getElementById('editor'));

    $('#form').on('submit', function () {
      $.ajax({
        url: '/article/edit',
        type: 'POST',
        data: $('#form').serialize(),
        dataType: 'json',
        success: function (result) {
          console.log(result)
          if (result.status === 200) {
            location.href = '/article/info/' + result.articleId
          }
        },
        error: function (error) {
          console.log(error)
          if (error.responseJSON.status === 400) {
            alert(error.responseJSON.msg)
          }
        }
      })
      return false
    })
  })
</script>
